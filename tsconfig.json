{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
  },
  "exclude": [
    "**/__tests__/",
    "test/fixtures",
    "node_modules/"
  ]
}
